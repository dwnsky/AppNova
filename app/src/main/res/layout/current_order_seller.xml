<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- =================================== -->
    <!-- ========== Top Bar Section ========== -->
    <!-- =================================== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Menu"
            android:src="@drawable/more_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvMyShop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Order"
            android:textColor="#4B3518"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgPlaceholder"
            app:layout_constraintStart_toEndOf="@+id/menuIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgPlaceholder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Menu"
            android:src="@drawable/dona_bakery"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ====================================== -->
    <!-- ========== Main Content Scroll ========== -->
    <!-- ====================================== -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Buttons: Add Item / Order -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add_item_button"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_cream_rounded"
                android:text="Add Item"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/order_button"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/order_button"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_dark_silver_rounded"
                android:text="Order"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/add_item_button"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Buttons: Current Order / Past Order -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/current_order"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_dark_silver_rounded"
                android:text="Current Order"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/past_order"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_item_button" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/past_order"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_cream_rounded"
                android:text="Past Order"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@id/current_order"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/current_order" />


            <!-- ========== ORDER CARD 1: ALISYA ========== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_alisya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/current_order"
                tools:layout_editor_absoluteX="16dp">

                <!-- Brown background that defines the card's full size -->
                <View
                    android:id="@+id/bgBottom1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_brown_rounded"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Customer Name -->
                <TextView
                    android:id="@+id/tvCustomerName1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="ALISYA"
                    android:textColor="#FBEDDC"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/tvOrderStatus1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Order Status -->
                <TextView
                    android:id="@+id/tvOrderStatus1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="PREPARING"
                    android:textColor="#FBEDDC"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBaseline_toBaselineOf="@id/tvCustomerName1"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Cream content background -->
                <View
                    android:id="@+id/bgTop1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_cream_rounded"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvCustomerName1" />

                <!-- Order Details Text -->
                <TextView
                    android:id="@+id/tvDetails1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="CROISSANT x1\n\nTotal payment = RM7"
                    android:textColor="#5A4F41"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/bgTop1"
                    app:layout_constraintStart_toStartOf="@id/bgTop1"
                    app:layout_constraintTop_toTopOf="@id/bgTop1" />

                <!-- Chat Customer Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnChat"
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_white_seller_rounded"
                    android:text="CHAT CUSTOMER"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/bgTop1"
                    app:layout_constraintEnd_toStartOf="@+id/btnDone"
                    app:layout_constraintStart_toStartOf="@id/bgTop1"
                    app:layout_constraintTop_toBottomOf="@id/tvDetails1" />

                <!-- Done Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDone"
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_green_rounded"
                    android:text="Done"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/btnChat"
                    app:layout_constraintEnd_toEndOf="@id/bgTop1"
                    app:layout_constraintStart_toEndOf="@id/btnChat" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- ========== ORDER CARD 2: DAWNA ========== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_dawna"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_alisya">
                <!-- Structure this card exactly like the one above -->

                <View
                    android:id="@+id/bgBottom2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_brown_rounded"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Customer Name -->
                <TextView
                    android:id="@+id/tvCustomerName2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="DAWNA"
                    android:textColor="#FBEDDC"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/tvOrderStatus2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Order Status -->
                <TextView
                    android:id="@+id/tvOrderStatus2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="PREPARING"
                    android:textColor="#FBEDDC"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBaseline_toBaselineOf="@id/tvCustomerName2"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Cream content background -->
                <View
                    android:id="@+id/bgTop2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_cream_rounded"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvCustomerName2" />

                <!-- Order Details Text -->
                <TextView
                    android:id="@+id/tvDetails2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="PAIN AU CHOCOLAT x1\n\nTotal payment = RM7"
                    android:textColor="#5A4F41"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/bgTop2"
                    app:layout_constraintStart_toStartOf="@id/bgTop2"
                    app:layout_constraintTop_toTopOf="@id/bgTop2" />

                <!-- Chat Customer Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnChat"
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_white_seller_rounded"
                    android:text="CHAT CUSTOMER"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/bgTop2"
                    app:layout_constraintEnd_toStartOf="@+id/btnDone"
                    app:layout_constraintStart_toStartOf="@id/bgTop2"
                    app:layout_constraintTop_toBottomOf="@id/tvDetails2" />

                <!-- Done Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDone"
                    android:layout_width="0dp"
                    android:layout_height="58dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_green_rounded"
                    android:text="Done"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/btnChat"
                    app:layout_constraintEnd_toEndOf="@id/bgTop2"
                    app:layout_constraintStart_toEndOf="@id/btnChat" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Nav Buttons -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:background="#ECDFCE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ECDFCE"
            android:orientation="horizontal">

            <!-- Set width to 0dp and weight to 1 for each item -->
            <TextView
                android:id="@+id/tvShop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Shop"
                android:textColor="#4B3518"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUpload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Upload"
                android:textColor="#4B3518"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Home"
                android:textColor="#4B3518"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvChat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Chat"
                android:textColor="#4B3518"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDonate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Donate"
                android:textColor="#4B3518"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
